@model WebApp.Models.Linealytics.ContadorDispositivo

@{
    ViewData["Title"] = "Editar Contador";
}

<div class="container">
    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-pencil me-2"></i>Editar Contador
                </h1>
                <a asp-action="ContadoresDispositivo" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Volver
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <form asp-action="EditContadorDispositivo" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="FechaCreacion" />
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MaquinaId" class="form-label">M치quina <span class="text-danger">*</span></label>
                        <select asp-for="MaquinaId" asp-items="ViewBag.Maquinas" class="form-select">
                            <option value="">-- Seleccionar m치quina --</option>
                        </select>
                        <span asp-validation-for="MaquinaId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre <span class="text-danger">*</span></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="TipoContador" class="form-label">Tipo de Contador</label>
                        <select asp-for="TipoContador" class="form-select">
                            <option value="Produccion">Producci칩n</option>
                            <option value="Ciclos">Ciclos</option>
                            <option value="Defectos">Defectos</option>
                        </select>
                        <span asp-validation-for="TipoContador" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Descripcion" class="form-label">Descripci칩n</label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-check">
                            <input asp-for="Activo" class="form-check-input" type="checkbox" />
                            <label asp-for="Activo" class="form-check-label">Activo</label>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="ContadoresDispositivo" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
