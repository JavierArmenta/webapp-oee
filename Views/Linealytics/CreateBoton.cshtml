@model WebApp.Models.Boton

@{
    ViewData["Title"] = "Crear Botón";
}

<div class="container-fluid">
    <div class="card shadow-sm mt-3">
        <div class="card-header">
            <h4 class="mb-0">
                <i class="bi bi-plus-circle me-2"></i>Crear Nuevo Botón
            </h4>
        </div>
        <div class="card-body">
            <form asp-controller="Linealytics" asp-action="CreateBoton" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre del Botón</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej: Botón de Emergencia 1" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="DepartamentoOperadorId" class="form-label">Departamento</label>
                        <select asp-for="DepartamentoOperadorId" class="form-select" asp-items="ViewBag.Departamentos">
                            <option value="">-- Seleccione un Departamento --</option>
                        </select>
                        <span asp-validation-for="DepartamentoOperadorId" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="Descripcion" class="form-label">Descripción (opcional)</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción del botón"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>

                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Nota:</strong> El código se generará automáticamente con el formato BTN-{ID} después de crear el botón.
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i>Guardar
                    </button>
                    <a asp-action="Botones" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-1"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
