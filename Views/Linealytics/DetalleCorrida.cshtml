@model WebApp.Models.Linealytics.CorridaProduccion

@{
    ViewData["Title"] = $"Corrida #{Model.Id}";
    var duracion = Model.FechaFin.HasValue
        ? (Model.FechaFin.Value - Model.FechaInicio)
        : (DateTime.UtcNow - Model.FechaInicio);
}

<div class="container-fluid">
    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-play-circle me-2"></i>Corrida #@Model.Id
                </h1>
                <div>
                    <a asp-action="CorridasProduccion" asp-route-contadorId="@Model.ContadorDispositivoId"
                       class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Volver
                    </a>
                    @if (Model.Estado == "Activa")
                    {
                        <form asp-action="CerrarCorrida" asp-route-id="@Model.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('¿Cerrar esta corrida?')">
                                <i class="bi bi-stop-circle me-1"></i>Cerrar Corrida
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-8">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Información de la Corrida</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Máquina:</dt>
                                <dd class="col-sm-7">@Model.ContadorDispositivo?.Maquina?.Nombre</dd>

                                <dt class="col-sm-5">Contador:</dt>
                                <dd class="col-sm-7">@Model.ContadorDispositivo?.Nombre</dd>

                                <dt class="col-sm-5">Producto:</dt>
                                <dd class="col-sm-7">@(Model.Producto?.Nombre ?? "<sin producto>")</dd>

                                <dt class="col-sm-5">Estado:</dt>
                                <dd class="col-sm-7">
                                    @if (Model.Estado == "Activa")
                                    {
                                        <span class="badge bg-success fs-6">
                                            <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>Activa
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary fs-6">Cerrada</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Inicio:</dt>
                                <dd class="col-sm-7">@Model.FechaInicio.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</dd>

                                <dt class="col-sm-5">Fin:</dt>
                                <dd class="col-sm-7">
                                    @if (Model.FechaFin.HasValue)
                                    {
                                        @Model.FechaFin.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")
                                    }
                                    else
                                    {
                                        <span class="text-muted">En curso...</span>
                                    }
                                </dd>

                                <dt class="col-sm-5">Duración:</dt>
                                <dd class="col-sm-7">
                                    @if (duracion.TotalHours >= 1)
                                    {
                                        @($"{(int)duracion.TotalHours}h {duracion.Minutes}m {duracion.Seconds}s")
                                    }
                                    else
                                    {
                                        @($"{duracion.Minutes}m {duracion.Seconds}s")
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Métricas</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 mb-3">
                            <div class="display-6 text-success">@Model.ProduccionTotal.ToString("N0")</div>
                            <small class="text-muted">Producción Total</small>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="display-6 text-info">@Model.NumeroLecturas</div>
                            <small class="text-muted">Lecturas</small>
                        </div>
                        <div class="col-6">
                            <div class="display-6 @(Model.NumeroResets > 0 ? "text-warning" : "text-muted")">@Model.NumeroResets</div>
                            <small class="text-muted">Resets</small>
                        </div>
                        <div class="col-6">
                            <div class="display-6 text-primary">@Model.UltimoContadorValor.ToString("N0")</div>
                            <small class="text-muted">Último Valor</small>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-6">
                            <small class="text-muted">Contador Inicial</small>
                            <div><strong>@Model.ContadorInicial.ToString("N0")</strong></div>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">Contador Final</small>
                            <div><strong>@Model.ContadorFinal.ToString("N0")</strong></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mt-3">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Historial de Lecturas</h5>
            <span class="badge bg-primary">@Model.Lecturas.Count lecturas</span>
        </div>
        <div class="card-body">
            @if (!Model.Lecturas.Any())
            {
                <div class="text-center py-4">
                    <i class="bi bi-inbox display-4 text-muted"></i>
                    <p class="mt-2 text-muted">No hay lecturas registradas</p>
                </div>
            }
            else
            {
                <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                    <table class="table table-sm table-hover">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th>#</th>
                                <th>Fecha/Hora</th>
                                <th class="text-end">Valor</th>
                                <th class="text-end">Anterior</th>
                                <th class="text-end">Diferencia</th>
                                <th class="text-end">Producción</th>
                                <th class="text-center">Flags</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 1;}
                            @foreach (var lectura in Model.Lecturas)
                            {
                                <tr class="@(lectura.EsReset ? "table-warning" : lectura.EsRuido ? "table-secondary" : "")">
                                    <td>@i</td>
                                    <td>@lectura.FechaHoraLectura.ToLocalTime().ToString("dd/MM HH:mm:ss")</td>
                                    <td class="text-end"><strong>@lectura.ContadorValor.ToString("N0")</strong></td>
                                    <td class="text-end text-muted">
                                        @(lectura.ContadorAnterior?.ToString("N0") ?? "-")
                                    </td>
                                    <td class="text-end @(lectura.Diferencia < 0 ? "text-danger" : "")">
                                        @(lectura.Diferencia >= 0 ? "+" : "")@lectura.Diferencia.ToString("N0")
                                    </td>
                                    <td class="text-end text-success">
                                        @if (lectura.ProduccionIncremental > 0)
                                        {
                                            <strong>+@lectura.ProduccionIncremental.ToString("N0")</strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (lectura.EsReset)
                                        {
                                            <span class="badge bg-warning text-dark" title="Reset detectado">RESET</span>
                                        }
                                        @if (lectura.EsRuido)
                                        {
                                            <span class="badge bg-secondary" title="Ruido ignorado">RUIDO</span>
                                        }
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
