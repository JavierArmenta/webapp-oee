@model WebApp.Models.Linealytics.CorridaProduccion

@{
    ViewData["Title"] = $"Corrida #{Model.Id}";
    var duracion = Model.FechaFin.HasValue
        ? (Model.FechaFin.Value - Model.FechaInicio)
        : (DateTime.UtcNow - Model.FechaInicio);
}

<div class="container-fluid">
    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-play-circle me-2"></i>Corrida #@Model.Id
                </h1>
                <div>
                    <a asp-action="CorridasProduccion" asp-route-maquinaId="@Model.MaquinaId"
                       class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Volver
                    </a>
                    @if (Model.Estado == "Activa")
                    {
                        <form asp-action="CerrarCorrida" asp-route-id="@Model.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('¿Cerrar esta corrida?')">
                                <i class="bi bi-stop-circle me-1"></i>Cerrar Corrida
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Información de la Corrida</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Máquina:</dt>
                        <dd class="col-sm-8"><strong>@Model.Maquina?.Nombre</strong></dd>

                        <dt class="col-sm-4">Producto:</dt>
                        <dd class="col-sm-8">@(Model.Producto?.Nombre ?? "<sin producto>")</dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Estado == "Activa")
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i>Activa
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">Cerrada</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Inicio:</dt>
                        <dd class="col-sm-8">@Model.FechaInicio.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")</dd>

                        <dt class="col-sm-4">Fin:</dt>
                        <dd class="col-sm-8">
                            @if (Model.FechaFin.HasValue)
                            {
                                @Model.FechaFin.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")
                            }
                            else
                            {
                                <span class="text-muted">En curso...</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Duración:</dt>
                        <dd class="col-sm-8">
                            @if (duracion.TotalHours >= 1)
                            {
                                @($"{(int)duracion.TotalHours}h {duracion.Minutes}m {duracion.Seconds}s")
                            }
                            else
                            {
                                @($"{duracion.Minutes}m {duracion.Seconds}s")
                            }
                        </dd>

                        <dt class="col-sm-4">Lecturas:</dt>
                        <dd class="col-sm-8"><strong>@Model.NumeroLecturas</strong></dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Métricas de Producción</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center mb-3">
                        <div class="col-6">
                            <div class="display-5 text-success">@Model.ProduccionOK.ToString("N0")</div>
                            <small class="text-muted">Producción OK</small>
                        </div>
                        <div class="col-6">
                            <div class="display-5 text-danger">@Model.ProduccionNOK.ToString("N0")</div>
                            <small class="text-muted">Producción NOK</small>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-6">
                            <h6 class="text-success">Contador OK</h6>
                            <table class="table table-sm">
                                <tr>
                                    <td class="text-muted">Inicial:</td>
                                    <td class="text-end"><strong>@Model.ContadorOKInicial.ToString("N0")</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Final:</td>
                                    <td class="text-end"><strong>@Model.ContadorOKFinal.ToString("N0")</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Resets:</td>
                                    <td class="text-end">
                                        @if (Model.NumeroResetsOK > 0)
                                        {
                                            <span class="badge bg-warning text-dark">@Model.NumeroResetsOK</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-6">
                            <h6 class="text-danger">Contador NOK</h6>
                            <table class="table table-sm">
                                <tr>
                                    <td class="text-muted">Inicial:</td>
                                    <td class="text-end"><strong>@Model.ContadorNOKInicial.ToString("N0")</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Final:</td>
                                    <td class="text-end"><strong>@Model.ContadorNOKFinal.ToString("N0")</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Resets:</td>
                                    <td class="text-end">
                                        @if (Model.NumeroResetsNOK > 0)
                                        {
                                            <span class="badge bg-warning text-dark">@Model.NumeroResetsNOK</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">0</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mt-3">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Historial de Lecturas</h5>
            <span class="badge bg-primary">@Model.Lecturas.Count lecturas</span>
        </div>
        <div class="card-body">
            @if (!Model.Lecturas.Any())
            {
                <div class="text-center py-4">
                    <i class="bi bi-inbox display-4 text-muted"></i>
                    <p class="mt-2 text-muted">No hay lecturas registradas</p>
                </div>
            }
            else
            {
                <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                    <table class="table table-sm table-hover">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th>#</th>
                                <th>Fecha/Hora</th>
                                <th class="text-end">OK</th>
                                <th class="text-end">+OK</th>
                                <th class="text-end">NOK</th>
                                <th class="text-end">+NOK</th>
                                <th class="text-center">Flags</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 1;}
                            @foreach (var lectura in Model.Lecturas)
                            {
                                var tieneReset = lectura.EsResetOK || lectura.EsResetNOK;
                                <tr class="@(tieneReset ? "table-warning" : "")">
                                    <td>@i</td>
                                    <td>@lectura.FechaHoraLectura.ToLocalTime().ToString("dd/MM HH:mm:ss")</td>
                                    <td class="text-end"><strong>@lectura.ContadorOK.ToString("N0")</strong></td>
                                    <td class="text-end @(lectura.ProduccionOK > 0 ? "text-success" : "text-muted")">
                                        @if (lectura.ProduccionOK > 0)
                                        {
                                            <strong>+@lectura.ProduccionOK.ToString("N0")</strong>
                                        }
                                        else
                                        {
                                            @:0
                                        }
                                    </td>
                                    <td class="text-end"><strong>@lectura.ContadorNOK.ToString("N0")</strong></td>
                                    <td class="text-end @(lectura.ProduccionNOK > 0 ? "text-danger" : "text-muted")">
                                        @if (lectura.ProduccionNOK > 0)
                                        {
                                            <strong>+@lectura.ProduccionNOK.ToString("N0")</strong>
                                        }
                                        else
                                        {
                                            @:0
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (lectura.EsResetOK)
                                        {
                                            <span class="badge bg-warning text-dark" title="Reset OK detectado">RST-OK</span>
                                        }
                                        @if (lectura.EsResetNOK)
                                        {
                                            <span class="badge bg-warning text-dark" title="Reset NOK detectado">RST-NOK</span>
                                        }
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
