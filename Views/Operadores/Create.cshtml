@model WebApp.Models.Operador

@{
    ViewData["Title"] = "Crear Operador";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>Crear Nuevo Operador</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Apellido" class="form-label"></label>
                            <input asp-for="Apellido" class="form-control" placeholder="Ingrese el apellido" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NumeroEmpleado" class="form-label"></label>
                            <input asp-for="NumeroEmpleado" class="form-control" placeholder="Ej: EMP001" />
                            <span asp-validation-for="NumeroEmpleado" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="CodigoPin" class="form-label">Código PIN</label>
                            <input type="password" id="CodigoPin" name="CodigoPin" class="form-control" 
                                   placeholder="Ingrese un PIN de al menos 4 dígitos" 
                                   pattern="[0-9]*" 
                                   inputmode="numeric" />
                            <span asp-validation-for="CodigoPinHashed" class="text-danger"></span>
                            <div class="form-text">El PIN debe tener al menos 4 dígitos numéricos.</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Roles</label>
                            @if (ViewBag.RolesOperador != null && ((List<WebApp.Models.RolOperador>)ViewBag.RolesOperador).Any())
                            {
                                <div class="border rounded p-3">
                                    @foreach (var rol in (List<WebApp.Models.RolOperador>)ViewBag.RolesOperador)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="RolesSeleccionados" value="@rol.Id" id="rol_@rol.Id">
                                            <label class="form-check-label" for="rol_@rol.Id">
                                                @rol.Nombre
                                                @if (!string.IsNullOrEmpty(rol.Descripcion))
                                                {
                                                    <small class="text-muted">- @rol.Descripcion</small>
                                                }
                                            </label>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    No hay roles disponibles. <a asp-controller="RolesOperador" asp-action="Create">Crear un rol</a>
                                </div>
                            }
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}