@model IEnumerable<WebApp.Models.MenuItem>

@{
    ViewData["Title"] = "Administrar Menús";
}

<div class="container-fluid">

    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="ph-list me-2"></i>Menús del Sistema
                </h1>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="ph-folder-open display-1 text-muted"></i>
                    <p class="text-muted mt-3">No hay menús registrados.</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle datatable-basic">
                        <thead class="table-light">
                            <tr>
                                <th>Nombre</th>
                                <th>Icono</th>
                                <th class="text-center">Estado</th>
                                <th class="text-end" style="min-width: 280px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var parent in Model.Where(m => m.ParentId == null).OrderBy(m => m.Orden))
                            {
                                <tr class="@(!parent.Activo ? "table-secondary" : "")">
                                    <td>
                                        <strong>@parent.Nombre</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(parent.Icono))
                                        {
                                            <i class="@parent.Icono me-1"></i>
                                            <code class="small">@parent.Icono</code>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (parent.Activo)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="MenuPermissions" asp-route-id="@parent.Id" class="btn btn-sm btn-info">
                                            <i class="ph-shield-check"></i> Permisos
                                        </a>
                                        <a asp-action="EditMenu" asp-route-id="@parent.Id" class="btn btn-sm btn-warning">
                                            <i class="ph-pencil"></i> Editar
                                        </a>
                                    </td>
                                </tr>
                                @foreach (var child in parent.Children.OrderBy(c => c.Orden))
                                {
                                    <tr class="@(!child.Activo ? "table-secondary" : "")">
                                        <td>
                                            <span class="ms-4">↳ @child.Nombre</span>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(child.Icono))
                                            {
                                                <i class="@child.Icono me-1"></i>
                                                <code class="small">@child.Icono</code>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (child.Activo)
                                            {
                                                <span class="badge bg-success">Activo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactivo</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <a asp-action="MenuPermissions" asp-route-id="@child.Id" class="btn btn-sm btn-info">
                                                <i class="ph-shield-check"></i> Permisos
                                            </a>
                                            <a asp-action="EditMenu" asp-route-id="@child.Id" class="btn btn-sm btn-warning">
                                                <i class="ph-pencil"></i> Editar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/js/jquery/jquery.min.js"></script>
    <script src="~/assets/js/vendor/tables/datatables/datatables.min.js"></script>

    <script src="~/assets/js/vendor/notifications/sweet_alert.min.js"></script>
    <script src="~/assets/demo/pages/extra_sweetalert.js"></script>

    <script>
        const swalInit = swal.mixin({
            buttonsStyling: false,
            customClass: {
                confirmButton: 'btn btn-success',
                cancelButton: 'btn btn-danger'
            }
        });

        const _componentDatatableBasic = function() {
            if (!$().DataTable) {
                console.warn('Warning - datatables.min.js is not loaded.');
                return;
            }

            $.extend( $.fn.dataTable.defaults, {
                autoWidth: false,
                ordering: false,
                columnDefs: [
                    {
                        targets: [ 3 ],
                        width: '280px'
                    }
                ],
                dom: '<"datatable-header"fl><"datatable-scroll"t><"datatable-footer"ip>',
                language: {
                    search: '<span class="me-3">Filtrar:</span> <div class="form-control-feedback form-control-feedback-end flex-fill">_INPUT_<div class="form-control-feedback-icon"><i class="ph-magnifying-glass opacity-50"></i></div></div>',
                    searchPlaceholder: 'Buscar...',
                    lengthMenu: '<span class="me-3">Mostrar:</span> _MENU_',
                    paginate: { 'first': 'Primero', 'last': 'Último', 'next': '→', 'previous': '←' }
                }
            });

            $('.datatable-basic').DataTable();
        };

        document.addEventListener('DOMContentLoaded', function() {
            _componentDatatableBasic();

            @if (TempData["Success"] != null)
            {
                <text>
                swalInit.fire({
                    title: '¡Éxito!',
                    text: '@TempData["Success"]',
                    icon: 'success',
                    confirmButtonText: 'OK',
                    buttonsStyling: false,
                    customClass: {
                        confirmButton: 'btn btn-success'
                    }
                });
                </text>
            }

            @if (TempData["Error"] != null)
            {
                <text>
                swalInit.fire({
                    title: 'Error',
                    text: '@TempData["Error"]',
                    icon: 'error',
                    confirmButtonText: 'OK',
                    buttonsStyling: false,
                    customClass: {
                        confirmButton: 'btn btn-danger'
                    }
                });
                </text>
            }
        });
    </script>
}
