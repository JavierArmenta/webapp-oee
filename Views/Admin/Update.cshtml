@using WebApp.Enums
@model ApplicationUser

<div class="col-sm-12">
    <div class="card marginBottomLess">
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12">
                    <!-- Authentication card start -->
                    <div class="signup-card card-block auth-body mr-auto ml-auto">

                        <form asp-action="Update" method="post">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="IsLdapUser" />

                            <div class="row m-b-20">
                                <div class="col-md-12">
                                    <h3 class="text-center txt-primary">Actualizar datos</h3>
                                    
                                    @if (Model.IsLdapUser)
                                    {
                                        <div class="alert alert-info text-center mt-3">
                                            <i class="fas fa-building me-2"></i>
                                            <strong>Usuario de Active Directory</strong>
                                            <br />
                                            <small>Este usuario se autentica mediante el dominio. No se puede cambiar la contraseña aquí.</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-secondary text-center mt-3">
                                            <i class="fas fa-user me-2"></i>
                                            <strong>Usuario Local</strong>
                                        </div>
                                    }
                                </div>
                            </div>
                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="form-group">
                                <label asp-for="UserName"></label>
                                @if (Model.IsLdapUser)
                                {
                                    <input asp-for="UserName" class="form-control" readonly />
                                    <small class="text-muted">El nombre de usuario de AD no se puede modificar</small>
                                }
                                else
                                {
                                    <input asp-for="UserName" class="form-control" />
                                }
                            </div>

                            <div class="form-group">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" />
                            </div>
                            
                            @if (!Model.IsLdapUser)
                            {
                                <div class="form-group">
                                    <label for="password">Nueva Contraseña</label>
                                    <input name="password" type="password" class="form-control" placeholder="Dejar vacío para mantener la actual" />
                                    <small class="text-muted">Solo complete si desea cambiar la contraseña</small>
                                </div>
                            }
                            
                            <div class="mt-4">
                                <button type="submit" class="btn btn-primary">Guardar</button>
                                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                            </div>

                            <hr />

                        </form>
                        <!-- end of form -->
                    </div>
                    <!-- Authentication card end -->
                </div>
                <!-- end of col-sm-12 -->
            </div>
            <!-- end of row -->

        </div>
    </div>
</div>

@section Scripts
{

}
